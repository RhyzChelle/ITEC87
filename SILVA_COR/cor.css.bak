body {
  margin: 0;
  font-family: Helvetica, sans-serif;
  padding-top: 60px;
}

header {
  background-color: white;
  background-size: cover;
  background-position: center;
  padding: 0px 0;
  text-align: center;
  width: 100%;
  top: 0;
  z-index: 1000;
  color: #6A040F; 
  display: flex;
  justify-content: space-between; 
  align-items: center;
}

.header-info {
  color: black;
  text-decoration-line: underline;
  text-decoration-color: #6A040F;
  margin-bottom: 10px;
  text-align: center;
  margin-top: 0px;
}

.profile {
  margin-bottom: 20px;
}

.prof {
  margin-bottom: 20px;
}

.profile img { 
  width: 80px;
  height: 80px;
  margin-left: -800px;
}

.prof img {
  width: 80px;
  height: 80px;
  margin-right: -800px;
}


table {
  width: 60%;
  margin: 0 auto; 
  border-collapse: collapse;
  text-align: left;
}

td, th {
  padding: 1px;
  font-size: 13.5px;
}

th {
  color: black;
}

td:nth-child(1), th:nth-child(1) {
  border-right: 2px solid #6A040F; 
}

td:nth-child(2), th:nth-child(2) {
  border-left: 2px solid #6A040F; 
  border-right: 2px solid #6A040F; 
}

td:nth-child(3), th:nth-child(3) {
  border-left: 2px solid #6A040F; 
}

caption {
  caption-side: top; 
  text-align: center;
  padding-top: 5px;
  background-color: #6A040F;
  color: white;
  font-size: 15px;
}

table {
  border: 2px solid #6A040F; 
}

#second-table {
  width: 60%;
  margin: 0 auto;
  border-collapse: collapse;
  border: 2px solid #6A040F;
}

#second-table th,
#second-table td {
  padding: 1px; 
  text-align: center;
  border: none; 
}

#second-table th {
  color: #6A040F; 
  border-bottom: none; 
}

#second-table td:nth-child(1),
#second-table td:nth-child(3) {
  border-left: none; 
}

#second-table td:last-child {
  border-right: none; 
}

#second-table td:nth-child(3),
#second-table td:nth-child(5) {
  text-align: left; 
}

#third-table {
  width: 60%;
  margin: 0 auto;
  border-collapse: collapse;
  border: 2px solid #6A040F;
}

#third-table caption {
  caption-side: top; 
  text-align: center;
  padding-top: 0px;
  background-color: #6A040F;
  color: white;
  font-size: 15px;
}

#third-table th,
#third-table td {
  padding: 1px; 
  text-align: center;
  border: none; 
}

#third-table th {
  color: #6A040F; 
  border-bottom: 1px solid ; 
}

#third-table caption div {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3px; 
  background-color: #ffffa3;
  padding-top: 5px;
  font-size: 14px;
}



#third-table thead tr {
  border-bottom: 2px solid #6A040F; 
}

#third-table thead th {
  white-space: nowrap;
  font-size: 14px;
  text-align: left;
  }

#fourth-table {
  width: 60%;
  margin-left: auto;
  margin-right: auto;
  border: 2px solid #6A040F;
  border-collapse: collapse;
}




.ft{
	border: 2px solid #6A040F;
	border-collapse: collapse;
	margin: 0;
}

.ra{

	border-bottom: none;
	border-right : 2px solid #6A040F;
}


#payments{
	border: none;
}


#ver {
  margin-top: 25px;
  width: 60%;
  color: #6A040F;
  border: 2px solid #6A040F;
  border-collapse: collapse;
  border-spacing: 0; 
  margin-bottom: 20px;
}

#ver td, #ver th {
  border: none; 
}

.text-co {
	color: #6A040F;
}	







 











